{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom",
      "es2016",
      "es2017"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "rootDir": "src",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/*.md",
    "**/rollup.config.js"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src/index.ts"
    ],
    "out": "docs",
    "readme": "none",
    "plugin": [
      "typedoc-plugin-markdown"
    ]
  }
}
